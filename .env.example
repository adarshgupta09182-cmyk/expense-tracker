# ============================================================================
# EXPENSE TRACKER - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control
# ============================================================================

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server port
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB connection URI
# Local: mongodb://localhost:27017/expense-tracker
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/expense-tracker
MONGODB_URI=mongodb://localhost:27017/expense-tracker

# ============================================================================
# AUTHENTICATION
# ============================================================================

# JWT secret key (use a strong random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-in-production

# JWT expiration time
JWT_EXPIRE=7d

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins for CORS
# Development: http://localhost:5173
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:5173

# Frontend URL for email verification links
FRONTEND_URL=http://localhost:5173

# ============================================================================
# LOGGING (Optional)
# ============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================================================
# EMAIL CONFIGURATION (Resend)
# ============================================================================

# Resend API Key (get from https://resend.com)
RESEND_API_KEY=re_your_api_key_here

# From email address (must be verified in Resend)
EMAIL_FROM=noreply@expensetracker.com

# Frontend URL for email verification links
FRONTEND_URL=http://localhost:5173

# ============================================================================
# NOTES
# ============================================================================
# 1. Never share your JWT_SECRET
# 2. Use strong passwords for database
# 3. In production, use environment-specific values
# 4. Keep sensitive data out of version control
# 5. Use a secrets manager for production (AWS Secrets Manager, HashiCorp Vault)
